{
  "compilerOptions": {
    "target": "ES2021",                                  
    "module": "commonjs",                                
    "lib": ["es6"],                                      
    "allowJs": true,                                     
    "outDir": "./dist",                                  
    "rootDir": "./src",                                  
    "removeComments": true,                              
    "strict": true,                                      
    "strictPropertyInitialization": false,               
    "esModuleInterop": true,                             
    "experimentalDecorators": true,                      
    "emitDecoratorMetadata": true,                       
    "skipLibCheck": true,                                
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
